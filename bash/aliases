#!/bin/bash
alias aptu="sudo apt-get update && sudo apt-get dist-ugrade -y"
alias sb="source ~/.bashrc"

alias go-dev="cd /home/amr/dev/"
alias go-vatbook="cd /home/amr/dev/python/django/vatbook/"

alias remove-old-kernels="sudo apt-get remove $(dpkg -l|egrep '^ii  linux-(im|he)'|awk '{print $2}'|grep -v `uname -r`)"

alias ll="ls -lrt --color"
alias ..="cd ../"
alias ...="cd ../../"

# Git
alias gg="git status -s"
alias gco="git checkout $1"
alias gci="git commit -v \"$*\""
alias gcia="git commit -v -a -m \"$*\""
alias gb="git branch"
alias gba="git branch -a"

alias gfc="git flow feature start $1"
alias gfp="git flow feature publish $1"
alias gff="git flow feature finish $1"

if [ -f ~/dotfiles/bash/aliases-cipal ]; 
then
    . ~/dotfiles/bash/aliases-cipal
fi

if [ -f ~/dotfiles/bash/aliases-manning ]; 
then
    . ~/dotfiles/bash/aliases-manning
fi
