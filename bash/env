#!/bin/bash

# This causes grails to fail
#export GRAILS_OPTS="-Dserver.ssl.key-store=/home/amr/.grailsTomcatKeystore"
export MAVEN_OPTS="$MAVEN_OPTS"
export GRADLE_OPTS="$GRADLE_OPTS -Dorg.gradle.daemon=true"

#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
export SDKMAN_DIR="/home/amr/.sdkman"
[[ -s "/home/amr/.sdkman/bin/sdkman-init.sh" ]] && source "/home/amr/.sdkman/bin/sdkman-init.sh"

# ####### PYTHON VIRTUALENV ###############
export WORKON_HOME=/home/amr/.virtualenvs
export VIRTUALENVWRAPPER_HOOK_DIR=$WORKON_HOME/hooks
source /etc/bash_completion.d/virtualenvwrapper

# Search cloud tools variables.
export CS_HOME=/home/amr/Apps/aws/cloud-search-tools/
export CS_ENDPOINT=cloudsearch.us-east-1.amazonaws.com
complete -C '/usr/local/bin/aws_completer' aws
# RDS variables
export AWS_RDS_HOME=/home/amr/Apps/RDSCli

# Overrides sdk JAVA 
# User specific environment and startup programs
JAVA_HOME=/usr/lib/jvm/default-java
export JAVA_OPTS="$JAVA_OPTS -Xmx2G -Xms1500M"

#export ANDROID_HOME=/home/amr/Apps/android-sdk-tools/
export ANDROID_SDK_ROOT=/home/amr/Apps/android-sdk-tools/

export DBX_ACCESS_TOKEN=xxx

# ####### Configure PATH ###############
#  - These are line by line so that you can kill one without affecting the others.
#  - Lowest priority first, highest priority last.
export PATH=/usr/bin:/usr/local/bin:/usr/local/sbin:$HOME/.local/bin:$PATH
export PATH=$JAVA_HOME/bin:$PATH # Java home
export PATH=$CS_HOME/bin:$AWS_RDS_HOME/bin:$PATH # AWS path
export PATH=$ANDROID_SDK_ROOT/tools/bin/:$ANDROID_SDK_ROOT/emulator/:$ANDROID_SDK_ROOT/tools/bin/:$PATH
#kubectx and kubens https://github.com/ahmetb/kubectx 
export PATH=$HOME/.kubectx:$PATH
