#!/bin/bash

alias ivc="go-dev && cd manning/livevideo/ivc/"
alias v="go-dev && cd manning/livebook/vBook/"
alias ivc="go-dev && cd manning/livevideo/ivc/"
alias vui="go-dev && cd manning/livevideo/ivc-ui/"
alias ui="go-dev && cd manning/livebook/livebook-ui/"
alias m="go-dev && cd manning/"
alias mk="go-dev && cd manning/e-commerce/Marketplace"
alias mws="go-dev && cd manning/e-commerce/MarketplaceWS"
alias ma="go-dev && cd manning/e-commerce/MarketplaceAdmin"
alias cas="m && cd cas-server"
alias vbuild="v && gradle clean build -x test -x integrationTest"
alias vqdeploy="vbuild && eb deploy livebook-qa"


alias s3-ls=s3_ls_summary

s3_ls_summary() {
    aws s3 ls --summarize --human-readable --recursive s3://$1
}

pull_m() {
    CWD=`pwd`
    mws
    pull_n_back

    mk 
    pull_n_back

    ma
    pull_n_back

    cd $CWD
}

pull_n_back() {
    CURRENT_VERSION=`git rev-parse --abbrev-ref HEAD`
    git stash 
    gco master && gl
    gco $CURRENT_VERSION
    git stash pop
}


if [ -f ~/dotfiles/bash/private-manning-aliases ]; then
    source ~/dotfiles/bash/private-manning-aliases
fi
