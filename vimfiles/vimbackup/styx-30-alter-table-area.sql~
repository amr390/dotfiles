ALTER TABLE AREA ADD (
    STATUS_ID   NUMBER (20,0),
    SOURCE_ID   NUMBER(20,0) 
);

ALTER TABLE AREA ADD CONSTRAINT FK_AREA_STATUS FOREIGN KEY (STATUS_ID)
REFERENCES STATUS(ID);

ALTER TABLE AREA ADD CONSTRAINT FK_AREA_SOURCE FOREIGN KEY (SOURCE_ID)
REFERENCES SOURCE(ID);

ALTER TABLE ATTRIBUTE_TYPE ADD (SOURCE_ID   NUMBER(20,0));
ALTER TABLE ATTRIBUTE_TYPE ADD CONSTRAINT FK_ATTRIBUTE_TYPE_SOURCE FOREIGN KEY (SOURCE_ID) REFERENCES SOURCE(ID);
