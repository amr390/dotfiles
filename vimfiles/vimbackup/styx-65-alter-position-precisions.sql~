-- updating centerx
ALTER TABLE POSITION RENAME COLUMN CENTERX to CENTERX_OLD;

ALTER TABLE POSITION add CENTERX NUMBER(15,5);

update POSITION SET CENTERX = CENTERX_OLD;

ALTER TABLE POSITION DROP COLUMN CENTERX_OLD;


