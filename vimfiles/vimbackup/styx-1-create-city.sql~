CREATE TABLE CITY(
    ID              NUMBER(20,0) NOT NULL, 
    FIRST_LANGUAGE  NUMBER(20, 0),
    SECOND_LANGUAGE NUMBER(20,0)
   ) TABLESPACE STYX_TABLES; 

-- primary key
ALTER TABLE CITY ADD CONSTRAINT PK_CITY_ID PRIMARY KEY (ID)
USING INDEX TABLESPACE STYX_INDEXES;

ALTER TABLE CITY ADD CONSTRAINT FK_CITY_AREA FOREIGN KEY (ID)
REFERENCES AREA (ID);

ALTER TABLE CITY ADD CONSTRAINT FK_FIRST_LANGUAGE FOREIGN KEY(FIRST_LANGUAGE)
REFERENCES LANGUAGE(ID);

ALTER TABLE CITY ADD CONSTRAINT FK_SECOND_LANGUAGE FOREIGN KEY(SECOND_LANGUAGE)
REFERENCES LANGUAGE(ID);
