#!/bin/bash
echo Using Apache CXF...

CXF_HOME=/opt/apache-cxf-2.7.12
if [ ! -d $CXF_HOME ]; then
	echo "Apache CXF home not present: $CXF_HOME"
	exit 1
fi

CLASSPATH=../agiv-security-client-1.0.1.jar:agiv-security-demo-1.0.1.jar
for JARFILE in $CXF_HOME/lib/*
do
    CLASSPATH=$CLASSPATH:$JARFILE
done
for JARFILE in ../lib/*
do
    CLASSPATH=$CLASSPATH:$JARFILE
done

java -cp $CLASSPATH be.agiv.security.demo.Main
