    <jpa:repositories base-package="be.cipal.csf.configuration.logging.domain.impl" transaction-manager-ref="configurationLoggingTransactionManager" entity-manager-factory-ref="configurationLoggingEntityManagerFactory" factory-class="be.cipal.common.persistence.repository.DefaultRepositoryFactoryBean">
    	<repository:include-filter type="regex" expression=".*Dao"/>
