CREATE TABLE STREET(
    ID                      NUMBER(20,0) NOT NULL
   ) TABLESPACE STYX_TABLES; 

-- primary key
ALTER TABLE STREET ADD CONSTRAINT PK_STREET_ID PRIMARY KEY (ID)
USING INDEX TABLESPACE STYX_INDEXES;

ALTER TABLE STREET ADD CONSTRAINT FK_STREET_AREA FOREIGN KEY (ID)
REFERENCES AREA (ID);

