CREATE TABLE AREA(
    ID                      NUMBER(20,0) NOT NULL, 
    TYPE                    NUMBER(20,0) NOT NULL,
    NAME_PROVIDER_ID        NUMBER(20,0) NOT NULL,
    CODE                    VARCHAR2(80) NOT NULL,
    START_DATE              DATE,
    END_DATE                DATE,
	VERSION                 NUMBER(20,0) DEFAULT 0 NOT NULL,
    USER_ADD	            VARCHAR2(255) NOT NULL,
    DT_ADD                  DATE NOT NULL,
    USER_UPDATE             VARCHAR2(255) NOT NULL,
    DT_UPDATE               DATE NOT NULL

   ) TABLESPACE STYX_TABLES; 

CREATE SEQUENCE SEQ_AREA;

-- primary key
ALTER TABLE AREA ADD CONSTRAINT PK_AREA_ID PRIMARY KEY (ID)
USING INDEX TABLESPACE STYX_INDEXES;

ALTER TABLE AREA ADD CONSTRAINT FK_AREATYPE FOREIGN KEY(TYPE) 
REFERENCES AREA_TYPE(ID);

ALTER TABLE AREA ADD CONSTRAINT FK_AREA_NAME_PROVIDER FOREIGN KEY(NAME_PROVIDER_ID) 
REFERENCES MULTILANGUAGE_PROVIDER(ID);
