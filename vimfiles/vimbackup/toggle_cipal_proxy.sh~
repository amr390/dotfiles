#!/usr/bin/env bash


MAVEN_OPTS_PROXY="-Xmx2048M -XX:MaxPermSize=2048M -Dhttp.proxyHost=geapproxy01.vm.cipal.net -Dhttp.proxyPort=3128 -Dhttp.proxyUser=amr -Dhttp.proxyPassword=cipal123"
MAVEN_OPTS_NO_PROXY="-Xmx2048M -XX:MaxPermSize=2048M"
MAVEN_OPTS="$MAVEN_OPTS_NO_PROXY"

if [ "$1" == "proxy" ];
then
    echo "proxy : exporting MAVEN_OPTS=$MAVEN_OPTS_PROXY"
    MAVEN_OPTS="$MAVEN_OPTS_PROXY"
else
    echo "no proxy : exporting MAVEN_OPTS=$MAVEN_OPTS_NO_PROXY"
    MAVEN_OPTS="$MAVEN_OPTS_NO_PROXY"
fi

export MAVEN_OPTS

exit 0
