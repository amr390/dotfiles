CREATE TABLE AREA_TYPE(
    ID                  NUMBER(20,0) NOT NULL, 
    CODE                VARCHAR2(80) UNIQUE,
    NAME_PROVIDER_ID    NUMBER(20,0) NOT NULL,
    DESCRIPTION_PROVIDER_ID NUMBER(20,0) NOT NULL,
	VERSION             NUMBER(20,0) DEFAULT 0 NOT NULL,
    USER_ADD            VARCHAR2(255) NOT NULL,
    DT_ADD              DATE NOT NULL,
    USER_UPDATE         VARCHAR2(255) NOT NULL,
    DT_UPDATE           DATE NOT NULL

) TABLESPACE STYX_TABLES; 

CREATE SEQUENCE SEQ_AREA_TYPE;

-- primary key
ALTER TABLE AREA_TYPE ADD CONSTRAINT PK_AREA_TYPE_ID PRIMARY KEY (ID)
USING INDEX TABLESPACE STYX_INDEXES;

ALTER TABLE AREA_TYPE ADD CONSTRAINT FK_AT_NAME_PRO FOREIGN KEY (NAME_PROVIDER_ID)
REFERENCES MULTILANGUAGE_PROVIDER(ID);

ALTER TABLE AREA_TYPE ADD CONSTRAINT FK_AT_DESCRIPTION_PRO FOREIGN KEY (DESCRIPTION_PROVIDER_ID)
REFERENCES MULTILANGUAGE_PROVIDER(ID);
