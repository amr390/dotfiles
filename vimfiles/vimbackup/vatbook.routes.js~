    angular.module('vatbook.app').config(['$routeProvider', '$httpProvider', function($routeProvider, $httpProvider){
        // sets the cookie holding the csrf token
        // and which header use to send it to the server.
        $httpProvider.defaults.xsrfCookieName = 'csrftoken';
        $httpProvider.defaults.xsrfHeaderName = 'X-CSRFToken';

        $routeProvider
        .when("/invoice/income/list", {
            controller: "IncomeInvoiceController",
            templateUrl: "/static/vatbook/views/invoice/income/invoice-list.html"
        })
        .when("/invoice/income/edit/:id", {
            controller: "IncomeInvoiceController",
            templateUrl: "/static/vatbook/views/invoice/income/invoice-edit.html"
        })
        .when("/invoice/income/new", {
            controller: "IncomeInvoiceController",
            templateUrl: "/static/vatbook/views/invoice/income/invoice-edit.html"
        })
        .when("/invoice/tax/list", {
            controller: "TaxInvoiceController",
            templateUrl: "/static/vatbook/views/invoice/tax/invoice-list.html"
        })
        .when("/invoice/tax/edit/:id", {
            controller: "TaxInvoiceController",
            templateUrl: "/static/vatbook/views/invoice/tax/invoice-edit.html"
        })
        .when("/invoice/tax/new", {
            controller: "TaxInvoiceController",
            templateUrl: "/static/vatbook/views/invoice/tax/invoice-edit.html"
        })
        .when("/concept/list", {
            controller: "ConceptController",
            templateUrl: "/static/vatbook/views/concept/concept-list.html"
        })
        .when("/concept/edit/:id", {
            controller: "ConceptController",
            templateUrl: "/static/vatbook/views/concept/concept-edit.html"
        })
        .when("/concept/new", {
            controller: "ConceptController",
            templateUrl: "/static/vatbook/views/concept/concept-edit.html"
        })
        .when("/contributor/list", {
            controller: "ContributorController",
            templateUrl: "/static/vatbook/views/contributor/contributor-list.html"
        })
        .when("/contributor/edit/:id", {
            controller: "ContributorController",
            templateUrl: "/static/vatbook/views/contributor/contributor-edit.html"
        })
        .when("/contributor/new", {
            controller: "ContributorController",
            templateUrl: "/static/vatbook/views/contributor/contributor-edit.html"
        })
        .when("/vatbook", {
            controller: "AppController",
            templateUrl: "/static/vatbook/views/manager.html"
        })
        .when("/client/list", {
            controller: "ClientController",
            templateUrl: "/static/vatbook/views/client/client-list.html"
        })
        .when("/client/edit/:id", {
            controller: "ClientController",
            templateUrl: "/static/vatbook/views/client/client-edit.html"
        })
        .when("/client/new", {
            controller: "ClientController",
            templateUrl: "/static/vatbook/views/client/client-edit.html"
        })
        .when("/admin", {
            controller: "AuthController",
            templateUrl: "/static/vatbook/views/admin.html"
        })
        .otherwise({
            controller: "AppController",
            templateUrl: "/static/vatbook/views/index.html"
        })
    }]);

