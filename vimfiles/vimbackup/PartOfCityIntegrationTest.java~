    @Autowired
    private AreaTypeFacade areaTypeFacade;
    @Autowired
    private CountryDao countryDao;

    /**
     * Prepares the fixture for the whole test class.
     *
     * @throws java.lang.Exception
     */
    @Before
    public void setUp() throws Exception {
        objectToTest = new PartOfCityImpl();
        objectToTest.setStartDate(DEFAULT_START_DATE);
        objectToTest.setEndDate(DEFAULT_END_DATE);
    }

}
