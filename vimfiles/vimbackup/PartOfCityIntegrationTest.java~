@Category(IntegrationTest.class)
@ContextConfiguration(locations = { "/META-INF/spring/address-beans.xml",
        "/META-INF/spring/domain-testutils-jpa-database-test-context.xml",
        "/META-INF/spring/functional-logging-testutils-jpa-database-test-context.xml",
