@Transactional
public class PartOfCityIntegrationTest extends AbstractSpringDBUnitIntegrationTest{
	private final static Date DEFAULT_START_DATE = new Date(-1);
    private final static Date DEFAULT_END_DATE = new Date();

    private EntityManager entityManager;

    private PartOfCityImpl objectToTest;
    @Autowired
