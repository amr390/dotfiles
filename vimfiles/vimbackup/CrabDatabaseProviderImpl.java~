import be.cipal.styx.crab.ws.service.CrabServiceException;

public class CrabDatabaseProviderImpl extends DefaultCrabImpl {

	/**
     * Sets the Crab service interface.
     *
     * @param crabService
     *            Crab service interface
     */
    public void setCrabService(final CrabService crabService) {
        this.crabService = crabService;
    }
    
    @Override
    protected List<City> listAllCities() throws CrabServiceException {
        final List<City> cityList = new ArrayList<>();
        cityList.addAll(this.listCitiesByRegion(null, SORT_FIELD));
        return cityList;
    }
}
