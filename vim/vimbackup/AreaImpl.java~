/**
 *
 */
package be.cipal.styx.address.domain.impl;

import java.util.Date;

import javax.persistence.CascadeType;
import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.Inheritance;
import javax.persistence.InheritanceType;
import javax.persistence.JoinColumn;
import javax.persistence.ManyToOne;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;
import javax.persistence.Temporal;
import javax.persistence.TemporalType;

import be.cipal.common.persistence.AbstractEntity;
import be.cipal.styx.address.domain.api.Area;
import be.cipal.styx.address.domain.api.AreaType;
import be.cipal.styx.address.domain.api.MultilanguageProvider;

/**
 * @author amr
 *
 */
@Entity
@Table(name = "AREA")
@Inheritance(strategy = InheritanceType.TABLE_PER_CLASS)
public class AreaImpl extends AbstractEntity implements Area {

	// TODO: generate sequence for id creation.
	private static final String SEQUENCE_STYX_AREA_GENERATOR = "sequencearea";

	@Id
	@SequenceGenerator(name = SEQUENCE_STYX_AREA_GENERATOR, sequenceName = "SEQ_AREA", allocationSize = 1, initialValue = 1)
	@GeneratedValue(strategy = GenerationType.SEQUENCE, generator = SEQUENCE_STYX_AREA_GENERATOR)
	private long id;

	@ManyToOne(cascade=CascadeType.ALL, fetch = FetchType.LAZY)
	@JoinColumn(name = "NAME_PROVIDER_ID")
	private MultilanguageProvider nameProvider;

	@ManyToOne
	@JoinColumn(name = "TYPE")
	private AreaType areaType;

	@Column(name = "START_DATE", nullable = false)
	@Temporal(TemporalType.DATE)
	private Date startDate;

	@Column(name = "START_DATE")
	@Temporal(TemporalType.DATE)
	private Date endDate;

	/*
	 * (non-Javadoc)
	 *
	 * @see be.cipal.styx.address.domain.api.Area#getAreaType()
	 */
	@Override
	public AreaType getAreaType() {
		return areaType;
	}

	/*
	 * (non-Javadoc)
	 *
	 * @see
	 * be.cipal.styx.address.domain.api.Area#setAreaType(be.cipal.styx.address
	 * .domain.api.AreaType)
	 */
	@Override
	public void setAreaType(AreaType areaType) {
		this.areaType = areaType;
	}

	/*
	 * (non-Javadoc)
	 *
	 * @see be.cipal.styx.address.domain.api.Area#getStartDate()
	 */
	@Override
	public Date getStartDate() {
		return startDate;
	}

	/*
	 * (non-Javadoc)
	 *
	 * @see be.cipal.styx.address.domain.api.Area#setStartDate(java.util.Date)
	 */
	@Override
	public void setStartDate(Date startDate) {
		this.startDate = startDate;
	}

	/*
	 * (non-Javadoc)
	 *
	 * @see be.cipal.styx.address.domain.api.Area#getEndDate()
	 */
	@Override
	public Date getEndDate() {
		return endDate;
	}

	/*
	 * (non-Javadoc)
	 *
	 * @see be.cipal.styx.address.domain.api.Area#setEndDate(java.util.Date)
	 */
	@Override
	public void setEndDate(Date endDate) {
		this.endDate = endDate;
	}

    @Override
    public MultilanguageProvider getNameProvider(){
        return this.nameProvider;
    }

    @Override
    public void setNameProvider(MultilanguageProvider provider){
        this.nameProvider = provider;
    }

	@Override
	public Long getObjectId() {
		return this.id;
	}
}
