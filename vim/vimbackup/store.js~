$(document).ready(function() {
    $('.btn').live('click', function(){
        $.get('/store/products/details/' + this.id, function(data){
            $('#show_details').html(data);
            $('#show_details').modal();
        });
    });

    $('.menu_item').live('click', function(){
        $('#marketing_row').hide('slow');
        $.get("/store/products/category/" + this.id, function(data){
            $('#marketing_row').html(data);
            $('#marketing_row').show('slow');
        });
    });


});


