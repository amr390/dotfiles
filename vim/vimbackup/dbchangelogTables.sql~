CREATE TABLE DATABASECHANGELOG 
(ID VARCHAR2(63) NOT NULL
, AUTHOR VARCHAR2(63) NOT NULL
, FILENAME VARCHAR2(200) NOT NULL
, DATEEXECUTED TIMESTAMP NOT NULL
, ORDEREXECUTED INTEGER NOT NULL
, EXECTYPE VARCHAR2(10) NOT NULL
, MD5SUM VARCHAR2(35)
, DESCRIPTION VARCHAR2(255)
, COMMENTS VARCHAR2(255)
, TAG VARCHAR2(255)
, LIQUIBASE VARCHAR2(20)
) TABLESPACE STYX_TABLES;

ALTER TABLE DATABASECHANGELOG ADD CONSTRAINT PK_DATABASECHANGELOG PRIMARY KEY (ID, AUTHOR, FILENAME) USING INDEX TABLESPACE STYX_INDEXES;

CREATE TABLE DATABASECHANGELOGLOCK (
ID INTEGER NOT NULL
, LOCKED NUMBER(1) NOT NULL
, LOCKGRANTED TIMESTAMP
, LOCKEDBY VARCHAR2(255)
) TABLESPACE STYX_TABLES;

ALTER TABLE DATABASECHANGELOGLOCK ADD CONSTRAINT PK_DATABASECHANGELOGLOCK PRIMARY KEY (ID) USING INDEX TABLESPACE STYX_INDEXES;

INSERT INTO DATABASECHANGELOGLOCK VALUES (1, 0, null, null);

COMMIT;
