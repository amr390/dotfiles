CREATE TABLE AREA_TYPE_LINK(
    HOLDER_ID NUMBER(20,0)  NOT NULL, 
    INCLUDED_ID NUMBER(20,0) NOT NULL,
	VERSION                 NUMBER(20,0) DEFAULT 0 NOT NULL,
    USER_ADD	            VARCHAR2(255) NOT NULL,
    DT_ADD                  DATE NOT NULL,
    USER_UPDATE             VARCHAR2(255) NOT NULL,
    DT_UPDATE               DATE NOT NULL

) TABLESPACE STYX_TABLES; 

-- primary key
ALTER TABLE AREA_TYPE_LINK ADD CONSTRAINT PK_AREA_TYPE_LINK PRIMARY KEY ("HOLDER_ID", "INCLUDED_ID")
USING INDEX TABLESPACE STYX_INDEXES;

ALTER TABLE AREA_TYPE_LINK ADD CONSTRAINT FK_AREATYPE_HOLDER FOREIGN KEY (HOLDER_ID)
REFERENCES AREA_TYPE(ID) USING INDEX TABLESPACE STYX_INDEXES;

ALTER TABLE AREA_TYPE_LINK ADD CONSTRAINT FK_AREATYPE_INCLUDED_ID FOREIGN KEY (INCLUDED_ID)
REFERENCES AREA_TYPE(ID) USING INDEX TABLESPACE STYX_INDEXES;
