DECLARE
    AREA_TYPE_NAME_ID NUMBER;
    AREA_TYPE_DESCRIPTION_ID NUMBER;
BEGIN
    SELECT SEQ_MULTILANGUAGE_PROVIDER.NEXTVAL INTO AREA_TYPE_NAME_ID FROM DUAL;
    SELECT SEQ_MULTILANGUAGE_PROVIDER.NEXTVAL INTO AREA_TYPE_DESCRIPTION_ID FROM DUAL;

    -- INSERT CITY AREA TYPE
    INSERT INTO MULTILANGUAGE_PROVIDER
    ( ID, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( AREA_TYPE_NAME_ID, 1, 'noPrincipal', SYSDATE, 'noPrincipal', SYSDATE);

    INSERT INTO MULTILANGUAGE
    ( ID, LABEL, LANGUAGE_ID, MULTILANGUAGE_PROVIDER_ID, START_DATE, END_DATE, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( SEQ_MULTILANGUAGE.NEXTVAL, 'City', 4, AREA_TYPE_NAME_ID, SYSDATE, NULL, 1, 'noPrincipal', SYSDATE, 'noPrincipal', SYSDATE);

    INSERT INTO MULTILANGUAGE_PROVIDER
    ( ID, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( AREA_TYPE_DESCRIPTION_ID, 1, 'noPrincipal', SYSDATE, 'noPrincipal', SYSDATE);

    INSERT INTO MULTILANGUAGE
    ( ID, LABEL, LANGUAGE_ID, MULTILANGUAGE_PROVIDER_ID, START_DATE, END_DATE, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( SEQ_MULTILANGUAGE.NEXTVAL, 'City area type', 4, AREA_TYPE_DESCRIPTION_ID, SYSDATE, NULL, 1, 'noPrincipal', SYSDATE, 'noPrincipal', SYSDATE);

    INSERT INTO AREA_TYPE
    ( ID, CODE, NAME_PROVIDER_ID, DESCRIPTION_PROVIDER_ID, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( SEQ_AREA_TYPE.NEXTVAL, 'CITY', AREA_TYPE_NAME_ID, AREA_TYPE_DESCRIPTION_ID, 1, 'insert', SYSDATE, 'update', SYSDATE);

	-- INSERT STREET AREA TYPE
    AREA_TYPE_NAME_ID := SEQ_MULTILANGUAGE_PROVIDER.NEXTVAL;
    AREA_TYPE_DESCRIPTION_ID := SEQ_MULTILANGUAGE_PROVIDER.NEXTVAL;

    INSERT INTO MULTILANGUAGE_PROVIDER
    ( ID, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( AREA_TYPE_NAME_ID, 1, 'noPrincipal', SYSDATE, 'noPrincipal', SYSDATE);

    INSERT INTO MULTILANGUAGE
    ( ID, LABEL, LANGUAGE_ID, MULTILANGUAGE_PROVIDER_ID, START_DATE, END_DATE, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( SEQ_MULTILANGUAGE.NEXTVAL, 'Street', 4, AREA_TYPE_NAME_ID, SYSDATE, NULL, 1, 'noPrincipal', SYSDATE, 'noPrincipal', SYSDATE);

    INSERT INTO MULTILANGUAGE_PROVIDER
    ( ID, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( AREA_TYPE_DESCRIPTION_ID, 1, 'noPrincipal', SYSDATE, 'noPrincipal', SYSDATE);

    INSERT INTO MULTILANGUAGE
    ( ID, LABEL, LANGUAGE_ID, MULTILANGUAGE_PROVIDER_ID, START_DATE, END_DATE, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( SEQ_MULTILANGUAGE.NEXTVAL, 'Street area type', 4, AREA_TYPE_DESCRIPTION_ID, SYSDATE, NULL, 1, 'noPrincipal', SYSDATE, 'noPrincipal', SYSDATE);

    INSERT INTO AREA_TYPE
    ( ID, CODE, NAME_PROVIDER_ID, DESCRIPTION_PROVIDER_ID, VERSION, USER_ADD, DT_ADD, USER_UPDATE, DT_UPDATE)
    VALUES
    ( SEQ_AREA_TYPE.NEXTVAL, 'STREET', AREA_TYPE_NAME_ID, AREA_TYPE_DESCRIPTION_ID, 1, 'insert', SYSDATE, 'update', SYSDATE);


	COMMIT;
END;
GO

